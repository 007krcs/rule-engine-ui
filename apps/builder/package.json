    "build": "next build",
    "start": "next start --port 3200",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@platform/component-contract": "workspace:*",
    "@platform/component-system": "workspace:*",
    "@platform/design-tokens": "workspace:*",
    "@platform/plugin-sdk": "workspace:*",
    "@platform/schema": "workspace:*",
    "next": "^15.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vitest": "4.0.18"
  }
