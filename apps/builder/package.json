{
  "name": "builder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @platform/schema --filter @platform/component-contract --filter @platform/component-system --filter @platform/plugin-sdk --filter @platform/design-tokens build",
    "prebuild": "pnpm --filter @platform/schema --filter @platform/component-contract --filter @platform/component-system --filter @platform/plugin-sdk --filter @platform/core-runtime --filter @platform/design-tokens build",
