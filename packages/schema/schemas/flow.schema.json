{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "flow.schema.json",
  "title": "FlowSchema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "flowId"],
  "allOf": [
    {
      "anyOf": [
        { "required": ["initialState", "states"] },
        { "required": ["initialScreenId", "screens", "transitions"] }
      ]
    }
  ],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "flowId": { "type": "string", "minLength": 1 },
    "initialState": { "type": "string", "minLength": 1 },
    "states": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/state" }
    },
    "initialScreenId": { "type": "string", "minLength": 1 },
    "screens": {
      "type": "array",
      "items": { "$ref": "#/$defs/screenNode" }
    },
    "transitions": {
      "type": "array",
      "items": { "$ref": "#/$defs/transitionEdge" }
    }
  },
  "$defs": {
    "state": {
      "type": "object",
      "additionalProperties": false,
      "required": ["uiPageId", "on"],
      "properties": {
        "uiPageId": { "type": "string", "minLength": 1 },
        "on": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/transition" }
        },
        "transitions": {
          "type": "array",
          "items": { "$ref": "#/$defs/transition" }
        }
      }
    },
    "transition": {
      "type": "object",
      "additionalProperties": false,
      "required": ["target"],
      "properties": {
        "target": { "type": "string", "minLength": 1 },
        "onEvent": { "type": "string", "minLength": 1 },
        "guard": { "$ref": "#/$defs/condition" },
        "condition": {
          "oneOf": [
            { "type": "string", "minLength": 1 },
            { "$ref": "#/$defs/condition" }
          ]
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["evaluateRules", "callApi", "setContext", "navigate"]
          }
        },
        "apiId": { "type": "string" },
        "priority": { "type": "number" },
        "weight": { "type": "number" },
        "delayMs": { "type": "integer", "minimum": 0 },
        "history": { "$ref": "#/$defs/historyCondition" },
        "fork": { "$ref": "#/$defs/forkConfig" }
      }
    },
    "historyCondition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hasVisitedAll": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "hasVisitedAny": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "notVisited": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "forkConfig": {
      "type": "object",
      "additionalProperties": false,
      "required": ["branches", "joinState"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "branches": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        },
        "joinType": {
          "type": "string",
          "enum": ["and", "or"]
        },
        "joinState": { "type": "string", "minLength": 1 }
      }
    },
    "screenNode": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "title", "uiPageId"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "title": { "type": "string", "minLength": 1 },
        "uiPageId": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "position": { "$ref": "#/$defs/screenPosition" },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "screenPosition": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      }
    },
    "transitionEdge": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "from", "to", "onEvent"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "onEvent": { "type": "string", "minLength": 1 },
        "condition": {
          "oneOf": [
            { "type": "string", "minLength": 1 },
            { "$ref": "#/$defs/condition" }
          ]
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["evaluateRules", "callApi", "setContext", "navigate"]
          }
        },
        "apiId": { "type": "string" },
        "label": { "type": "string" },
        "metadata": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "condition": {
      "oneOf": [
        { "$ref": "#/$defs/all" },
        { "$ref": "#/$defs/any" },
        { "$ref": "#/$defs/not" },
        { "$ref": "#/$defs/compare" }
      ]
    },
    "all": {
      "type": "object",
      "additionalProperties": false,
      "required": ["all"],
      "properties": {
        "all": {
          "type": "array",
          "items": { "$ref": "#/$defs/condition" }
        }
      }
    },
    "any": {
      "type": "object",
      "additionalProperties": false,
      "required": ["any"],
      "properties": {
        "any": {
          "type": "array",
          "items": { "$ref": "#/$defs/condition" }
        }
      }
    },
    "not": {
      "type": "object",
      "additionalProperties": false,
      "required": ["not"],
      "properties": {
        "not": { "$ref": "#/$defs/condition" }
      }
    },
    "compare": {
      "type": "object",
      "additionalProperties": false,
      "required": ["op", "left"],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "eq",
            "neq",
            "gt",
            "gte",
            "lt",
            "lte",
            "in",
            "contains",
            "startsWith",
            "endsWith",
            "exists"
          ]
        },
        "left": { "$ref": "#/$defs/operand" },
        "right": { "$ref": "#/$defs/operand" }
      }
    },
    "operand": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["path"],
          "properties": {
            "path": { "type": "string", "pattern": "^(data|context)\\." }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["value"],
          "properties": {
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        }
      ]
    }
  }
}
