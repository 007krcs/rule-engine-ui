{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ui.schema.json",
  "title": "UISchema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "pageId", "layout", "components"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "pageId": { "type": "string", "minLength": 1 },
    "layout": { "$ref": "#/$defs/layoutNode" },
    "components": {
      "type": "array",
      "items": { "$ref": "#/$defs/component" }
    },
    "layoutType": { "type": "string", "enum": ["grid"] },
    "grid": { "$ref": "#/$defs/gridSpec" },
    "items": {
      "type": "array",
      "items": { "$ref": "#/$defs/gridItem" }
    }
  },
  "$defs": {
    "layoutNode": {
      "oneOf": [
        { "$ref": "#/$defs/gridLayout" },
        { "$ref": "#/$defs/stackLayout" },
        { "$ref": "#/$defs/tabsLayout" },
        { "$ref": "#/$defs/sectionLayout" }
      ]
    },
    "baseLayout": {
      "type": "object",
      "required": ["id", "type"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "props": { "type": "object", "additionalProperties": true },
        "componentIds": { "type": "array", "items": { "type": "string" } },
        "columns": { "type": "integer", "minimum": 1 },
        "rows": { "type": "integer", "minimum": 1 },
        "direction": { "type": "string", "enum": ["vertical", "horizontal"] },
        "tabs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "label", "child"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "child": { "$ref": "#/$defs/layoutNode" }
            }
          }
        },
        "title": { "type": "string" },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/layoutNode" }
        }
      }
    },
    "gridLayout": {
      "allOf": [
        { "$ref": "#/$defs/baseLayout" },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": { "const": "grid" },
            "columns": { "type": "integer", "minimum": 1 },
            "rows": { "type": "integer", "minimum": 1 }
          }
        }
      ]
    },
    "stackLayout": {
      "allOf": [
        { "$ref": "#/$defs/baseLayout" },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": { "const": "stack" },
            "direction": { "type": "string", "enum": ["vertical", "horizontal"] }
          }
        }
      ]
    },
    "tabsLayout": {
      "allOf": [
        { "$ref": "#/$defs/baseLayout" },
        {
          "type": "object",
          "required": ["type", "tabs"],
          "properties": {
            "type": { "const": "tabs" },
            "tabs": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["id", "label", "child"],
                "properties": {
                  "id": { "type": "string" },
                  "label": { "type": "string" },
                  "child": { "$ref": "#/$defs/layoutNode" }
                }
              }
            }
          }
        }
      ]
    },
    "sectionLayout": {
      "allOf": [
        { "$ref": "#/$defs/baseLayout" },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": { "const": "section" },
            "title": { "type": "string" }
          }
        }
      ]
    },
    "gridSpec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["columns", "rowHeight", "gap"],
      "properties": {
        "columns": { "type": "integer", "minimum": 1 },
        "rowHeight": { "type": "integer", "minimum": 12 },
        "gap": { "type": "integer", "minimum": 0 },
        "collisionStrategy": { "type": "string", "enum": ["push", "swap"] },
        "breakpoints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "lg": { "$ref": "#/$defs/gridBreakpoint" },
            "md": { "$ref": "#/$defs/gridBreakpoint" },
            "sm": { "$ref": "#/$defs/gridBreakpoint" }
          }
        }
      }
    },
    "gridBreakpoint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["columns"],
      "properties": {
        "columns": { "type": "integer", "minimum": 1 },
        "rowHeight": { "type": "integer", "minimum": 12 },
        "gap": { "type": "integer", "minimum": 0 }
      }
    },
    "gridItem": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "componentId", "x", "y", "w", "h"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "componentId": { "type": "string", "minLength": 1 },
        "x": { "type": "integer", "minimum": 0 },
        "y": { "type": "integer", "minimum": 0 },
        "w": { "type": "integer", "minimum": 1 },
        "h": { "type": "integer", "minimum": 1 },
        "breakpoint": { "type": "string", "enum": ["lg", "md", "sm"] },
        "props": { "type": "object", "additionalProperties": true },
        "bindings": { "$ref": "#/$defs/bindings" },
        "rules": { "$ref": "#/$defs/componentRules" }
      }
    },
    "component": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "adapterHint", "accessibility"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "adapterHint": { "type": "string", "minLength": 1 },
        "props": { "type": "object", "additionalProperties": true },
        "bindings": { "$ref": "#/$defs/bindings" },
        "validations": { "$ref": "#/$defs/validations" },
        "i18n": { "$ref": "#/$defs/i18n" },
        "accessibility": { "$ref": "#/$defs/accessibility" },
        "responsive": { "$ref": "#/$defs/responsive" },
        "events": { "$ref": "#/$defs/events" },
        "rules": { "$ref": "#/$defs/componentRules" }
      }
    },
    "i18n": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "labelKey": { "type": "string", "minLength": 1 },
        "helperTextKey": { "type": "string", "minLength": 1 },
        "placeholderKey": { "type": "string", "minLength": 1 }
      }
    },
    "bindings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "data": { "type": "object", "additionalProperties": { "type": "string" } },
        "context": { "type": "object", "additionalProperties": { "type": "string" } },
        "computed": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "validations": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "required": { "type": "boolean" },
        "min": { "type": "number" },
        "max": { "type": "number" },
        "regex": { "type": "string" },
        "rules": { "type": "array", "items": { "type": "string" } }
      }
    },
    "accessibility": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ariaLabelKey", "keyboardNav", "focusOrder"],
      "properties": {
        "ariaLabelKey": { "type": "string", "minLength": 1 },
        "tabIndex": { "type": "integer" },
        "role": { "type": "string" },
        "keyboardNav": { "type": "boolean", "const": true },
        "focusOrder": { "type": "integer", "minimum": 1 }
      }
    },
    "responsive": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "breakpoints": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "columns": { "type": "integer", "minimum": 1 },
              "span": { "type": "integer", "minimum": 1 },
              "hidden": { "type": "boolean" }
            }
          }
        }
      }
    },
    "componentRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "visibleWhen": { "$ref": "#/$defs/ruleCondition" },
        "disabledWhen": { "$ref": "#/$defs/ruleCondition" },
        "requiredWhen": { "$ref": "#/$defs/ruleCondition" },
        "setValueWhen": { "$ref": "#/$defs/setValueWhen" }
      }
    },
    "setValueWhen": {
      "type": "object",
      "additionalProperties": false,
      "required": ["when", "value"],
      "properties": {
        "when": { "$ref": "#/$defs/ruleCondition" },
        "value": {
          "type": ["string", "number", "boolean", "object", "array", "null"]
        },
        "path": { "type": "string", "minLength": 1 }
      }
    },
    "ruleCondition": {
      "oneOf": [
        { "$ref": "#/$defs/ruleAll" },
        { "$ref": "#/$defs/ruleAny" },
        { "$ref": "#/$defs/ruleNot" },
        { "$ref": "#/$defs/ruleCompare" }
      ]
    },
    "ruleAll": {
      "type": "object",
      "additionalProperties": false,
      "required": ["all"],
      "properties": {
        "all": { "type": "array", "items": { "$ref": "#/$defs/ruleCondition" } }
      }
    },
    "ruleAny": {
      "type": "object",
      "additionalProperties": false,
      "required": ["any"],
      "properties": {
        "any": { "type": "array", "items": { "$ref": "#/$defs/ruleCondition" } }
      }
    },
    "ruleNot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["not"],
      "properties": {
        "not": { "$ref": "#/$defs/ruleCondition" }
      }
    },
    "ruleCompare": {
      "type": "object",
      "additionalProperties": false,
      "required": ["op", "left"],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "eq",
            "neq",
            "gt",
            "gte",
            "lt",
            "lte",
            "dateEq",
            "dateBefore",
            "dateAfter",
            "dateBetween",
            "in",
            "contains",
            "startsWith",
            "endsWith",
            "exists"
          ]
        },
        "left": { "$ref": "#/$defs/ruleOperand" },
        "right": { "$ref": "#/$defs/ruleOperand" }
      }
    },
    "ruleOperand": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["path"],
          "properties": {
            "path": { "type": "string", "pattern": "^(data|context)\\." }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["value"],
          "properties": {
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        }
      ]
    },
    "events": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "onChange": {
          "type": "array",
          "items": { "$ref": "#/$defs/eventAction" }
        },
        "onClick": {
          "type": "array",
          "items": { "$ref": "#/$defs/eventAction" }
        },
        "onSubmit": {
          "type": "array",
          "items": { "$ref": "#/$defs/eventAction" }
        }
      }
    },
    "eventAction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "payload": { "type": "object", "additionalProperties": true }
      }
    }
  }
}
