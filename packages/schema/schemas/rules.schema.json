    "condition": {
      "oneOf": [
        { "$ref": "#/$defs/all" },
        { "$ref": "#/$defs/any" },
        { "$ref": "#/$defs/not" },
        { "$ref": "#/$defs/compare" }
      ]
    },
    "all": {
      "type": "object",
      "additionalProperties": false,
      "required": ["all"],
      "properties": {
        "all": { "type": "array", "items": { "$ref": "#/$defs/condition" } }
      }
    },
    "any": {
      "type": "object",
      "additionalProperties": false,
      "required": ["any"],
      "properties": {
        "any": { "type": "array", "items": { "$ref": "#/$defs/condition" } }
      }
    },
    "not": {
      "type": "object",
      "additionalProperties": false,
      "required": ["not"],
      "properties": {
        "not": { "$ref": "#/$defs/condition" }
      }
    },
    "compare": {
      "type": "object",
      "additionalProperties": false,
      "required": ["op", "left"],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "eq",
            "neq",
            "gt",
            "gte",
            "lt",
            "lte",
            "in",
            "contains",
            "startsWith",
            "endsWith",
            "exists"
          ]
        },
        "left": { "$ref": "#/$defs/operand" },
        "right": { "$ref": "#/$defs/operand" }
      }
    },
    "operand": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["path"],
          "properties": {
            "path": { "type": "string", "pattern": "^(data|context)\\." }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["value"],
          "properties": {
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        }
      ]
    },
    "action": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "path", "value"],
          "properties": {
            "type": { "const": "setField" },
            "path": { "type": "string", "pattern": "^data\\." },
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "path", "value"],
          "properties": {
            "type": { "const": "setContext" },
            "path": { "type": "string", "pattern": "^context\\." },
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "path"],
          "properties": {
            "type": { "const": "removeField" },
            "path": { "type": "string" }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "path", "value"],
          "properties": {
            "type": { "const": "addItem" },
            "path": { "type": "string" },
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "from", "to"],
          "properties": {
            "type": { "const": "mapField" },
            "from": { "type": "string" },
            "to": { "type": "string" }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "message"],
          "properties": {
            "type": { "const": "throwError" },
            "message": { "type": "string" },
            "code": { "type": "string" }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "event"],
          "properties": {
            "type": { "const": "emitEvent" },
            "event": { "type": "string" },
            "payload": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        }
      ]
    }
  }
