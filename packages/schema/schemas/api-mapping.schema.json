{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "api-mapping.schema.json",
  "title": "ApiMapping",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "apiId", "type", "method", "endpoint", "requestMap", "responseMap"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "apiId": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "enum": ["rest", "graphql"] },
    "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
    "endpoint": { "type": "string", "minLength": 1 },
    "requestMap": { "$ref": "#/$defs/requestMap" },
    "responseMap": { "$ref": "#/$defs/responseMap" },
    "transforms": {
      "type": "array",
      "items": { "$ref": "#/$defs/transform" }
    },
    "conditions": { "$ref": "#/$defs/condition" },
    "errorHandling": { "$ref": "#/$defs/errorHandling" }
  },
  "$defs": {
    "mappingSource": {
      "type": "object",
      "additionalProperties": false,
      "required": ["from"],
      "properties": {
        "from": { "type": "string", "minLength": 1 },
        "transform": { "type": "string" },
        "default": { "type": ["string", "number", "boolean", "object", "array", "null"] }
      }
    },
    "requestMap": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "body": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/mappingSource" }
        },
        "query": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/mappingSource" }
        },
        "headers": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/mappingSource" }
        }
      }
    },
    "responseMap": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "data": { "type": "object", "additionalProperties": { "type": "string" } },
        "context": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },
    "transform": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "expression"],
      "properties": {
        "name": { "type": "string" },
        "expression": { "type": "string" }
      }
    },
    "errorHandling": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "map": { "type": "object", "additionalProperties": { "type": "string" } },
        "retry": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "maxAttempts": { "type": "integer", "minimum": 0 },
            "backoffMs": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "condition": {
      "oneOf": [
        { "$ref": "#/$defs/all" },
        { "$ref": "#/$defs/any" },
        { "$ref": "#/$defs/not" },
        { "$ref": "#/$defs/compare" }
      ]
    },
    "all": {
      "type": "object",
      "additionalProperties": false,
      "required": ["all"],
      "properties": {
        "all": { "type": "array", "items": { "$ref": "#/$defs/condition" } }
      }
    },
    "any": {
      "type": "object",
      "additionalProperties": false,
      "required": ["any"],
      "properties": {
        "any": { "type": "array", "items": { "$ref": "#/$defs/condition" } }
      }
    },
    "not": {
      "type": "object",
      "additionalProperties": false,
      "required": ["not"],
      "properties": {
        "not": { "$ref": "#/$defs/condition" }
      }
    },
    "compare": {
      "type": "object",
      "additionalProperties": false,
      "required": ["op", "left"],
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "eq",
            "neq",
            "gt",
            "gte",
            "lt",
            "lte",
            "in",
            "contains",
            "startsWith",
            "endsWith",
            "exists"
          ]
        },
        "left": { "$ref": "#/$defs/operand" },
        "right": { "$ref": "#/$defs/operand" }
      }
    },
    "operand": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["path"],
          "properties": {
            "path": { "type": "string", "pattern": "^(data|context)\\." }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["value"],
          "properties": {
            "value": {
              "type": ["string", "number", "boolean", "object", "array", "null"]
            }
          }
        }
      ]
    }
  }
}
