{
  "name": "headless-ui-flow-rules-platform",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/adapters/*"
  ],
  "scripts": {
    "dev": "pnpm --filter ruleflow-web dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "check:components": "tsx scripts/check-components.ts",
    "lint": "turbo run lint",
    "lint:docs": "node scripts/lint-docs.js",
    "lint:docs:todo": "node scripts/lint-docs-todo.js",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "demo:react": "tsx apps/demo-host-react/scripts/run-demo.ts",
    "validate:configs": "tsx scripts/validate-configs.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.51.1",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsx": "^4.21.0",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
